<!--[if gt IE 8]><!--> <html lang="<%= I18n.locale %>" class="no-js"> <!--<![endif]-->
	<head>
		<meta charset="utf-8">
		<meta http-equiv="content-style-type" content="text/css" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

		<meta name="viewport" content="width=device-width,initial-scale=1">
		
		<meta name="SKYPE_TOOLBAR" content="SKYPE_TOOLBAR_PARSER_COMPATIBLE" /> 
		
		<!-- <base href="<%= full_current_domain_url %>" /> -->
		
		<title>RailsPlay</title>
		
		<meta name="keywords" content="">
		<meta name="description" content="">

		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= stylesheet_link_tag "dijit/themes/soria/soria", :media => "screen" %>

		<%= csrf_meta_tags %>

		<script>
		var dojoConfig = {
			has: {
        "dojo-firebug": true,
        "dojo-debug-messages": true
      },
			parseOnLoad: true,
			async: true,
			baseUrl: 'assets/dojo/',
      cacheBust: true // Get "fresh" resources
		};
		</script>

		<!--//
		Env: <%= Rails.env %> 
		Controller: <%= controller.controller_name %>
		Action: <%= controller.action_name %>
		//-->

		<%= javascript_include_tag "application" %>

		<script>
		// APPHTML-0#000001
		require(["dojo/i18n!dijit/form/nls/validate", "dojo/on", "dojo/ready", "dojo/json", "dojo/_base/config",
			"dojo/parser", "dijit/registry", "dijit/form/Button", "dojo/domReady!"],
		function(i18n, on, ready, JSON, config, parser, registry, button) {
			console.info('APPHTML-0#000001'); //debug
			ready(function() {
				parser.parse();
				var dialog = registry.byId("dialog");
				// dialog.set("content", "<pre>" + JSON.stringify(config, true) + "</pre>");
				dialog.show();
			});
		});
		</script>

	</head>
	<body class="soria" data-controller="<%= controller_name %>" data-action="<%= action_name %>">

		<!--[if lt IE 7]>
			<p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
		<![endif]-->

		<div id="main-container" class="container">

			<%= yield %>

			<div data-dojo-type="dijit/Dialog" id="dialog" title="Tip" class="align-center">
			   <p>Enable the 'console' if you want to see the debug info.</p>
			   <p></p>
			   <p>PRESS ESC TO EXIT THIS DIALOG</p>
			</div>

			<br/>

			<hr>

			<footer>
				<p><strong><em>RailsPlay</em></strong> &copy; 2012</p>
			</footer>

		</div><!-- /container -->

	</body>
</html>